<div class="card">
    {{#each products}}
    <div class="card">
        <h3>{{this.title}}</h3>
        <p><b>Description: </b>{{this.description}}</p>
        <p><b>Price: </b>{{this.price}}</p>
        <a href="/products/{{this._id}}">
        <button class="button">
            View detail
        </button>
        </a>
    </div>
    
    {{/each}}
    <div class="container">
        {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}"><button class="button">Anterior</button></a>
        {{/if}}
        {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}"><button class="button">Siguiente</button></a>
        {{/if}}
    </div>
</div>